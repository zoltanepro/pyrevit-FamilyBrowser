<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Family Browser"
    Height="600"
    Width="900"
    WindowStartupLocation="CenterScreen"
    Background="#2C2C2C">
    
    <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Column="0" Background="#1F1F1F">
    <TextBlock Text="Categories" Foreground="White" Margin="10" FontSize="16"/>
    <ListBox Name="CategoryList" Margin="10" Background="#303030" Foreground="White">
        <ListBoxItem Content="Heizung" />
        <ListBoxItem Content="Lüftung" />
        <ListBoxItem Content="Sanitär" />
        <ListBoxItem Content="Elektro" />
    </ListBox>
</StackPanel>

<Grid Grid.Column="1" Margin="10">
    <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="60"/>
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0">
    <TextBox Name="SearchBox"
             Width="300"
             Height="28"
             VerticalAlignment="Center"
             Margin="5"
             PlaceholderText="Search family..." />
</DockPanel>

<ScrollViewer Grid.Row="1">
    <WrapPanel Name="FamilyGrid">
        <Button Content="Family 01" Width="150" Height="100" Margin="5"/>
        <Button Content="Family 02" Width="150" Height="100" Margin="5"/>
        <Button Content="Family 03" Width="150" Height="100" Margin="5"/>
    </WrapPanel>
</ScrollViewer>

<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
    <Button Content="Load Family" 
            Width="120" Height="40" 
            Background="#007ACC"
            Foreground="White"
            Margin="10"/>
</StackPanel>
